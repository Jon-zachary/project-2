<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div id="container">
      <header>
        <h1><%= thread.title %></h1>
        <p><%= thread.content %></p>
      </header>
      <section>
        <form action="/all/<%= thread.id %>" method="POST">
          <textarea name="comments[comment]" rows="8" cols="80"></textarea>
          <input type="submit" value="Reply">
        </form>
        <% comments.forEach((comment) => { %>
        <div id="comment-container">
          <p><%= comment.comment %></p>
          <p><%= comment.username %></p>
        </div>
        <% }) %>
      </section>
    </div>
  </body>
</html>
